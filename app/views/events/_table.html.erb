<table class='table table-striped' data-controller='events'>
  <thead>
    <tr>
      <th scope="col">HBX ID</th>
      <th scope="col">Name</th>
      <th scope="col">Event Type</th>
      <th scope="col">Status</th>
      <th scope="col">Error</th>
      <th scope="col">Updated At</th>
      <th scope="col" class="px-3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <%= render partial: "row", locals: { event: event } %>
    <% end %>
    <tr class='empty-row text-center'>
      <td class='p-5 font-weight-bolder' colspan="7">
        No events yet.
      </td>
    </tr>
  </tbody>
</table>